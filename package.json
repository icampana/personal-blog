{
  "name": "icampana-blog",
  "type": "module",
  "version": "2.0.1",
  "scripts": {
    "dev": "tinacms dev -c \"astro dev\"",
    "build": "pnpm run build:production",
    "build:production": "pnpm run prebuild && tinacms build && node scripts/build-search-index.js && astro build && pnpm run postbuild",
    "build:preview": "pnpm run prebuild && tinacms build && node scripts/build-search-index.js && astro build",
    "build:content": "astro build",
    "build:index": "node scripts/build-search-index.js",
    "prebuild": "pnpm run lint && pnpm run test:run",
    "postbuild": "pnpm run build:verify",
    "build:verify": "node scripts/verify-build.js",
    "preview": "astro preview",
    "astro": "astro",
    "tina:dev": "tinacms dev",
    "tina:build": "tinacms build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "images:analyze": "node scripts/optimize-images.js analyze",
    "images:create-samples": "node scripts/optimize-images.js create-samples",
    "fix:frontmatter": "node scripts/fix-frontmatter.js",
    "fix:images": "node scripts/fix-image-paths.js",
    "copy:images": "node scripts/copy-images.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "deploy": "node scripts/deploy.js production",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:preview": "node scripts/deploy.js preview",
    "deploy:help": "node scripts/deploy.js --help",
    "validate:content": "node scripts/validate-content.js",
    "migrate:content": "node scripts/migrate-content.js",
    "test:content": "node scripts/test-content-rendering.js",
    "test:performance": "node scripts/analyze-performance.js",
    "test:mobile": "node scripts/test-mobile-responsiveness.js",
    "test:final": "node scripts/run-final-tests.js"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.5",
    "@astrojs/react": "^4.3.1",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "@tinacms/cli": "^1.10.3",
    "astro": "^5.14.6",
    "daisyui": "^4.12.24",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "marked": "^16.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "reading-time": "^1.5.0",
    "rehype-highlight": "^7.0.2",
    "rehype-slug": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-directive": "^3.0.0",
    "remark-emoji": "^5.0.2",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.4",
    "striptags": "^3.2.0",
    "tailwindcss": "^3.4.17",
    "theme-change": "^2.5.0",
    "tinacms": "^2.8.3",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@biomejs/biome": "^2.2.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "vitest": "^2.1.9"
  }
}

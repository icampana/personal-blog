---
import { type CollectionEntry, getCollection } from 'astro:content';
import PostLayout from '../../../layouts/PostLayout.astro';
import { getPostUrl } from '../../../utils/client';
import {
  getLanguageFromFilename,
  stripLanguageSuffix,
  LOCALES,
  type Locale,
  getCleanSlug,
} from '../../../utils/i18n';

export async function getStaticPaths() {
  const posts = await getCollection('posts');

  // Get all Spanish posts (source of truth for slug generation)
  // Spanish posts have no language suffix (returns null from getLanguageFromFilename)
  const spanishPosts = posts.filter(
    (post) => {
      const lang = getLanguageFromFilename(post.id);
      return lang === null || lang === LOCALES.DEFAULT;
    },
  );

  return spanishPosts
    .filter((post) => !getPostUrl(post, LOCALES.PORTUGUESE).match(/^\/pt\/posts\/\d{4}\/\d{2}\//))
    .map((post) => {
      const cleanSlug = getCleanSlug(post.slug);
      const url = getPostUrl(post, LOCALES.PORTUGUESE);
      // Remove the /pt/posts/ prefix
      const slugParts = url.replace('/pt/posts/', '').split('/').filter(Boolean);

      // Check if translation exists
      const translationExists = posts.some(
        (p) => {
          const pLang = getLanguageFromFilename(p.id);
          const pCleanSlug = getCleanSlug(p.slug);
          return pLang === LOCALES.PORTUGUESE && pCleanSlug === cleanSlug;
        },
      );

      // If translation exists, use it; otherwise use Spanish post
      const postToRender = translationExists
        ? posts.find(
            (p) => {
              const pLang = getLanguageFromFilename(p.id);
              const pCleanSlug = getCleanSlug(p.slug);
              return pLang === LOCALES.PORTUGUESE && pCleanSlug === cleanSlug;
            },
          )
        : post;

      return {
        params: { slug: slugParts.join('/') },
        props: {
          post: postToRender!,
          locale: LOCALES.PORTUGUESE,
          isFallback: !translationExists,
        },
      };
    });
}

interface Props {
  post: CollectionEntry<'posts'>;
  locale: Locale;
  isFallback: boolean;
}

const { post, locale, isFallback } = Astro.props;

// Get related posts (Portuguese only)
const allPosts = await getCollection('posts');
const portuguesePosts = allPosts.filter(
  (p) => getLanguageFromFilename(p.id) === LOCALES.PORTUGUESE,
);

const relatedPosts = portuguesePosts
  .filter((otherPost) => {
    if (otherPost.data.tags && post.data.tags && otherPost.id !== post.id) {
      return otherPost.data.tags.some((tag: string) => post.data.tags?.includes(tag));
    }
    return false;
  })
  .slice(0, 3)
  .sort(
    (a, b) =>
      new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
  );
---
<PostLayout post={post} locale={locale}>
  <!-- Fallback banner -->
  {isFallback && (
    <div class="alert alert-warning mb-6" role="alert">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <span>
        <strong>Nota:</strong> Este conteúdo ainda não está disponível em Português. Exibindo a versão original em Espanhol.
      </span>
    </div>
  )}

  <!-- Related posts section -->
  {relatedPosts.length > 0 && (
    <section class="mt-12 pt-8 border-t border-base-300">
      <h3 class="text-2xl font-bold mb-6">Artigos Relacionados</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {relatedPosts.map((relatedPost) => (
          <div class="card bg-base-100 shadow-sm">
            <div class="card-body p-4">
              <h4 class="card-title text-sm">
                <a
                  href={getPostUrl(relatedPost, LOCALES.PORTUGUESE)}
                  class="hover:text-primary"
                >
                  {relatedPost.data.title}
                </a>
              </h4>
              {relatedPost.data.description && (
                <p class="text-xs text-base-content/70">
                  {relatedPost.data.description.slice(0, 100)}...
                </p>
              )}
            </div>
          </div>
        ))}
      </div>
    </section>
  )}

  <!-- Back to top button -->
  <button
    id="back-to-top"
    class="fixed bottom-5 right-5 btn btn-circle btn-primary opacity-0 transition-opacity duration-300"
    onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
    type="button"
  >
    ↑
  </button>
</PostLayout>

<script>
  // Show/hide back to top button
  window.addEventListener('scroll', () => {
    const button = document.getElementById('back-to-top');
    if (button) {
      if (window.scrollY > 300) {
        button.classList.remove('opacity-0');
        button.classList.add('opacity-100');
      } else {
        button.classList.remove('opacity-100');
        button.classList.add('opacity-0');
      }
    }
  });
</script>

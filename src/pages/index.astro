---
import { getCollection } from 'astro:content';
import PostCard from '../components/PostCard.astro';
import StructuredData from '../components/StructuredData.astro';
import BlogLayout from '../layouts/BlogLayout.astro';
import { sortPostsByDate } from '../utils';
import { generateImgxUrl } from '../utils/imgxUtils';
import { Image } from 'astro:assets';

// Get all posts and sort by date
const allPosts = await getCollection('posts');
const posts = sortPostsByDate(allPosts);

// Limit to first 12 posts for homepage
const featuredPosts = posts.slice(0, 12);

const title = 'Iván Gabriel';
const description =
  'Diario de un Informático, Emprendedor, Desarrollador y Curioso a tiempo completo.';
const imagePhoto = generateImgxUrl('/photos/personal_image_ia.png', 350, 350, 90, 'auto', true);
---

<BlogLayout title={title} description={description}>
  <div class="px-2">
    <div class="hero bg-base-200 py-4">
      <div class="hero-content flex-col lg:flex-row">
        <Image
          src={imagePhoto}
          class="max-w-sm rounded-lg shadow-2xl"
          alt="Foto de Iván Gabriel"
          width="350"
          height="350"
          loading="eager"
        />
        <div class="max-w-md">
          <p class="py-6">
            Soy Iván Gabriel, desarrollador y emprendedor con más de 20 años de experiencia en tecnología.
            He trabajado en proyectos internacionales para medios, fintech y startups, liderando equipos y creando soluciones con IA, integraciones y plataformas web.
            En este espacio comparto mi portafolio, publicaciones y reflexiones.
          </p>

          <!-- Social Links -->
          <div class="flex gap-4 mb-6">
            <a
              href="https://twitter.com/icampana"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-ghost btn-sm text-blue-500 hover:bg-blue-50"
              title="Sígueme en Twitter"
            >
              <title>Twitter</title>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>

            <a
              href="https://github.com/icampana"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-ghost btn-sm text-gray-700 hover:bg-gray-50"
              title="Mi perfil en GitHub"
            >
              <title>GitHub</title>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>

            <a
              href="https://linkedin.com/in/icampana"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-ghost btn-sm text-blue-700 hover:bg-blue-50"
              title="Mi perfil en LinkedIn"
            >
              <title>LinkedIn</title>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>

            <a
              href="https://anchor.fm/e-van"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-ghost btn-sm text-orange-600 hover:bg-orange-50"
              title="Mi podcast en Anchor"
            >
              <title>Podcast</title>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.568 8.16l-6.56 3.79c-.307.178-.566.033-.566-.32V8.914c0-.353.259-.498.566-.32l6.56 3.79c.307.178.566.033.566.32V11.63c0 .353-.259.498-.566.32z"/>
              </svg>
            </a>
          </div>

          <a href="/content/sobre-el-autor" class="btn btn-primary">Conoce más sobre mí</a>
        </div>
      </div>
    </div>

    <h2 class="text-4xl font-bold text-center my-8">
      Últimas Publicaciones
    </h2>

    <div class="mx-auto py-3 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredPosts.map((post, index) => (
        <PostCard post={post} lazyLoad={index > 2} />
      ))}
    </div>

    <div class="text-center my-8">
      <a href="/posts/page/2" class="btn btn-primary btn-lg">
        Ver más...
      </a>
    </div>
  </div>

  <!-- Structured Data -->
  <StructuredData type="organization" />
  <StructuredData type="person" />
  <StructuredData type="website" />
</BlogLayout>

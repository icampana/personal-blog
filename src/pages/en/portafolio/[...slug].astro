---
import { type CollectionEntry, getCollection } from 'astro:content';
import ProjectLayout from '../../../layouts/ProjectLayout.astro';
import { getProjectUrl } from '../../../utils/client';
import {
  getLanguageFromFilename,
  stripLanguageSuffix,
  LOCALES,
  type Locale,
  getCleanSlug,
} from '../../../utils/i18n';

export async function getStaticPaths() {
  const projects = await getCollection('projects');

  // Get all Spanish projects (source of truth)
  const spanishProjects = projects.filter(
    (project) => getLanguageFromFilename(project.id) === LOCALES.DEFAULT,
  );

  return spanishProjects.map((project) => {
    const cleanSlug = getCleanSlug(project.slug);
    const url = getProjectUrl(project, LOCALES.ENGLISH);
    // Remove the /portafolio prefix and split into slug parts
    const slugParts = url.replace('/portafolio/', '').split('/').filter(Boolean);

    // Check if translation exists
    const translationExists = projects.some(
      (p) => {
        const pLang = getLanguageFromFilename(p.id);
        const pCleanSlug = getCleanSlug(p.slug);
        return pLang === LOCALES.ENGLISH && pCleanSlug === cleanSlug;
      },
    );

    // If translation exists, use it; otherwise use Spanish project
    const projectToRender = translationExists
      ? projects.find(
          (p) => {
            const pLang = getLanguageFromFilename(p.id);
            const pCleanSlug = getCleanSlug(p.slug);
            return pLang === LOCALES.ENGLISH && pCleanSlug === cleanSlug;
          },
        )
      : project;

    return {
      params: { slug: slugParts.join('/') },
      props: {
        project: projectToRender!,
        locale: LOCALES.ENGLISH,
        isFallback: !translationExists,
      },
    };
  });
}

interface Props {
  project: CollectionEntry<'projects'>;
  locale: Locale;
  isFallback: boolean;
}

const { project, locale, isFallback } = Astro.props;
---

<ProjectLayout project={project} locale={locale}>
  <!-- Fallback banner -->
  {isFallback && (
    <div class="alert alert-warning mb-6" role="alert">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <span>
        <strong>Note:</strong> This content is not yet available in English. Displaying the original Spanish version.
      </span>
    </div>
  )}
</ProjectLayout>

<style>
  @reference "../../../styles/globals.css";

  .prose {
    @apply text-base-content;
  }

  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    @apply text-base-content;
  }

  .prose code {
    @apply bg-base-200 text-base-content px-1 py-0.5 rounded;
  }

  .prose pre {
    @apply bg-base-200 text-base-content;
  }

  .prose blockquote {
    @apply border-l-primary text-base-content;
  }
</style>

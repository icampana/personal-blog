---
import { getCollection } from 'astro:content';
import SearchComponent from './SearchComponent';
import ThemeToggle from './ThemeToggle';

// Get all pages for navigation
const pages = await getCollection('pages');

const menuItems = [
  { url: '/', title: 'Home' },
  { url: '/portafolio', title: 'Portfolio' },
  ...pages.map(page => ({
    url: page.data.path ? `/content${page.data.path}` : `/content/${page.slug}`,
    title: page.data.title
  }))
];

const siteTitle = "IvÃ¡n Gabriel";
---

<header>
  <div class="navbar bg-neutral text-neutral-content">
    <div class="navbar-start">
      <div class="dropdown">
        <button type="button" tabindex="0" class="btn btn-ghost btn-circle">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <title>Menu</title>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h7"
            />
          </svg>
        </button>
        <ul class="menu menu-md dropdown-content bg-neutral rounded-box z-[1] mt-3 w-52 p-2 shadow">
          {menuItems.map((item) => (
            <li>
              <a href={item.url}>{item.title}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    <div class="navbar-center">
      <a class="btn btn-ghost text-xl" href="/">
        {siteTitle}
      </a>
    </div>
    <div class="navbar-end">
      <SearchComponent client:load />
      <ThemeToggle client:load />
    </div>
  </div>
  <div>
    <slot />
  </div>
</header>
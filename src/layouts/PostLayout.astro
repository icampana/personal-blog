---
import type { CollectionEntry } from 'astro:content';
import BackToTop from '../components/BackToTop';
import ShareButtons from '../components/ShareButtons';
import { formatDate } from '../utils/client';
import { getReadingTime } from '../utils';
import { normalizeImagePath } from '../utils/imageUtils';
import BlogLayout from './BlogLayout.astro';
import { generateImgxUrl } from '../utils/imgxUtils';
import type { Locale } from '../utils/i18n';
import { getAvailableTranslations, getCleanSlug } from '../utils/i18n';
import { getCollection } from 'astro:content';
import { getPostUrl } from '../utils/client';

export interface Props {
  post: CollectionEntry<'posts'>;
  locale?: Locale;
}

const { post, locale = 'es' } = Astro.props;
const { title, description, featuredImage, tags, date } = post.data;
const { Content } = await post.render();

// Calculate translations
const allPosts = await getCollection('posts');
const cleanSlug = getCleanSlug(post.slug);
const availableTranslations = await getAvailableTranslations(allPosts, cleanSlug);

// Convert slugs to full URLs
const translations: Partial<Record<Locale, string>> = {};
for (const [lang, slug] of Object.entries(availableTranslations)) {
  // Find the post object for this slug to generate the correct URL
  const translatedPost = allPosts.find(p => p.slug === slug);
  if (translatedPost) {
    translations[lang as Locale] = getPostUrl(translatedPost, lang as Locale);
  }
}

const readingTime = getReadingTime(post.body);
const readingTimeText = locale === 'en'
  ? `${Math.round(readingTime.minutes)} min read`
  : locale === 'pt'
  ? `${Math.round(readingTime.minutes)} min de leitura`
  : `${Math.round(readingTime.minutes)} minutos de lectura`;

const imagePath = normalizeImagePath(featuredImage);
---

<BlogLayout
  title={title}
  description={description}
  image={imagePath}
  type="article"
  publishedTime={date.toISOString()}
  modifiedTime={date.toISOString()}
  tags={tags}
  wordCount={readingTime.words}
  readingTime={readingTime.minutes}
  locale={locale}
>
  <article class="max-w-4xl mx-auto">
    <!-- Featured Image -->
    {featuredImage && (
      <div class="mb-8">
        <img
          src={imagePath.startsWith('http') || imagePath.startsWith('//') ? imagePath : generateImgxUrl(imagePath, 1200, 675)}
          alt={title}
          class="w-full h-64 object-cover rounded-lg shadow-lg"
          loading="eager"
          width="1200"
          height="675"
        />
      </div>
    )}

    <!-- Post Header -->
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4 text-base-content">{title}</h1>

      <div class="flex flex-wrap items-center gap-4 text-sm text-base-content/70 mb-4">
        <time datetime={date.toISOString()}>
          {formatDate(date)}
        </time>
        <span>â€¢</span>
        <span>{readingTimeText} de lectura</span>
      </div>

      {description && (
        <p class="text-lg text-base-content/80 mb-6">{description}</p>
      )}

      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a
              href={`/tag/${tag.toLowerCase()}`}
              class="badge badge-outline hover:badge-primary"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>

    <!-- Post Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Share buttons -->
    <div class="mt-8 pt-6 border-t border-base-300">
      <ShareButtons
        url={Astro.url.href}
        title={title}
        description={description}
        client:load
      />
    </div>
  </article>

  <!-- Back to top button -->
  <BackToTop client:load />
</BlogLayout>

<style>
  @reference "../styles/globals.css";

  .prose {
    @apply text-base-content;
  }

  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    @apply text-base-content;
  }

  .prose code {
    @apply bg-base-200 text-base-content px-1 py-0.5 rounded;
  }

  .prose pre {
    @apply bg-base-200 text-base-content;
  }

  .prose blockquote {
    @apply border-l-primary text-base-content;
  }
</style>

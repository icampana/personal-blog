{
  "$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "**",
      "!**/.astro",
      "!**/.netlify",
      "!**/.husky",
      "!**/.contentlayer",
      "!**/.migration-backup",
      "!**/node_modules",
      "!**/dist",
      "!**/coverage",
      "!**/public/admin",
      "!**/public/*.json",
      "!**/tina/__generated__/*",
      "!**/src/styles/globals.css",
      "!**/src/**/*.astro",
      "!**/src/components/*.astro",
      "!**/astro-blog",
      "!**/scripts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "style": {
        "useImportType": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
